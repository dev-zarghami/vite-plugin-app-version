{
  "name": "vite-plugin-app-version",
  "version": "0.1.5",
  "description": "Vite plugin to generate an app version file (version.json) and optional virtual module with git/tag/build metadata.",
  "keywords": [
    "vite",
    "plugin",
    "version",
    "build-meta",
    "pwa",
    "sveltekit",
    "react",
    "vue"
  ],
  "license": "MIT",
  "author": "dev.zarghami@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-zarghami/vite-plugin-app-version.git"
  },
  "bugs": {
    "url": "https://github.com/dev-zarghami/vite-plugin-app-version/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/dev-zarghami/vite-plugin-app-version#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "vite": ">=4.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "tsup": "^8.2.4",
    "typescript": "^5.6.3",
    "vite": "^5.4.0"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
